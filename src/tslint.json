{
    "extends": "../tslint.json",
    "rules": {
        "directive-selector": [
            true,
            "attribute",
            [
                "app",
                "share"
            ],
            "camelCase"
        ],
        "component-selector": [
            true,
            "element",
            [
                "app",
                "layout",
                "auth",
                "operation",
                "machine",
                "material",
                "batch"
            ],
            "kebab-case"
        ]
    }
}
